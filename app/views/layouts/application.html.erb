<!DOCTYPE html>
<html>
  <head>
    <title>Superblog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>

  <!-- Header   -->  
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
       <div class="container">
          <a class="navbar-brand text-warning" href="#">ACH SuperBlog</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
                
          <div class="collapse navbar-collapse" id="navbarSupportedContent">                  
            <ul class="navbar-nav ml-auto">
              <li class="nav-item mr-3 mt-2">           
                <div>
                    <%= link_to  "Inicio", posts_path %>
                </div>
              </li>
              <li class="nav-item mr-3 mt-2">            
                <% if user_signed_in?%>
                <div>
                  <%= link_to  "Salir", destroy_user_session_path, method: :delete %>
                </div>
                <% else%>
                <div>
                    <%= link_to  "Ingresar", new_user_session_path %>
                </div>
                <% end%> 
              </li>                       
              <li class="nav-item active">                
                <%= link_to  "Registrarse", new_user_registration_path, class: "btn btn-yellow-brand" %>
              </li>                       
            </ul>                  
          </div>
       </div>
    </nav> 
  <!-- /Header   -->

  <% flash.each do |key, value| %>
  <div class="alerta">
    <div class="<%= flash_class(key) %>">
      <%= value %>
    </div>
    <% end %>
  </div>



    <%= yield %>


  <!-- Footer -->
    <footer class="pb-4 pt-4 brand-color">
      <div class="container">
        <div class="row text-center">
          <div class="col-12 col-lg">
            <%= link_to "Contáctanos" %>
          </div>
          <div class="col-12 col-lg">
            <%= link_to "Blog" %>
          </div>
          <div class="col-12 col-lg ">
            <%= link_to "Términos y condiciones" %>
          </div>
        </div>      
      </div>
    </footer>
    <!-- /Footer -->  

    <script>
        $(".alert").fadeIn(500).css("opacity", "0.85").delay(6000).slideUp(1000);
        $(".alerta").on('click', '.alert', function () { $(this).remove() })
    </script>  

  </body>
</html>
