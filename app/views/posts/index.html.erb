<%= render 'index-main' %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-sm-9">
        <% if user_signed_in?%>
        <%= image_tag gravatar_url(current_user.email , 64), alt: "" %> 
          <div class="text-right">
            <h3><%= link_to  "Crear Post", new_post_path, class: "btn btn-primary" %></h3> 
          </div> 
        <%end%>        
        <% @posts.each do |post| %>
        <!-- <%= image_tag gravatar_url(post.user.email , 64), alt: "Image of post creator", class: "mx-auto d-block" %>  -->
        <h6 class="text-left">Publicado por <%= post.user.email%>
           <%= (post.created_at.strftime("%B #{post.created_at.day.ordinalize}, %Y") )  %>
          <!-- hace alrededor <%= time_ago_in_words(post.created_at)  %> -->
        </h6>
        <h3 class="text-center"><%= link_to post.title, post %></h3>       
        <br>
          <p>
            <%if post.content.length > 250 %>
            <%= truncate(post.content, length: 250) %>
            <%= link_to "Leer mÃ¡s ...", post %>
            <%else%>
            <%= post.content %>
            <%end%> 
          </p>
          <div>
              <span class="comment-count"> Comentarios <%= post.comments.count %></span>
          </div>
          <% if user_signed_in? && current_user.id == post.user_id %>
          <%= link_to "Editar", edit_post_path(post) %>
          <%= link_to 'Eliminar Post', post, method: :delete, data: { confirm: 'Esta seguro de eliminar el Post ?' } %>	
          <%end%> 
         <%end%> 
    </div>
  </div>
</div>









 

