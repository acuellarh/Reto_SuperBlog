
<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-9">
        <h3><%= link_to  "Crear Post", new_post_path %></h3> 
        <br>
        <br>
        <% @posts.each do |post| %>
        <h3><%= link_to post.title, post %></h3>
        <h6>Publicado por <%= post.user.email %>
            hace alrededor <%= time_ago_in_words(post.created_at)  %>
        </h6>
        <br>
          <p>
            <%if post.content.length > 250 %>
            <%= truncate(post.content, length: 250) %>
            <%= link_to "Leer mÃ¡s ...", post %>
            <%else%>
            <%= post.content %>
            <%end%> 
          </p>
          <%= link_to "Editar", edit_post_path(post) %>
          <%= link_to 'Eliminar Post', post, method: :delete, data: { confirm: 'Esta seguro de eliminar el Post ?' } %>	
        <%end%> 
    </div>
  </div>
</div>









 

