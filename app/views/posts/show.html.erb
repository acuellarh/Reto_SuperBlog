<div class="container">
  <div class="row justify-content-center">
    <div class="colum-sm-9">
      <div class="post">  
        <%= image_tag gravatar_url(@post.user.email , 64), alt: "" %>
        <h1><%=@post.title %></h1>        
        <p><%= markdown(@post.content) %></p>
        

        <% if user_signed_in? && current_user.id == @post.user_id %>        
        <%= link_to "Volver", posts_path %>
        <br>
        <%= link_to "Editar", edit_post_path %>
        <br>
        <%= link_to 'Eliminar Post', @post, method: :delete, data: { confirm: 'Esta seguro de eliminar el Post ?' } %> 
        <%end%>

        <div class="comments">
          <h2>Comentarios</h2>
          <hr>

          <%= render 'comments/list' %>

          <div class="panel panel-default" id="comments">

          </div>

          <% if signed_in? %>         

            <%= form_for [@comment], :remote => true do |f| %>

              <div class="form-group">
                <%= f.text_area :content, class: "form-control", id:"comment-box", placeholder: "Agregar comentario" %>
                <%= hidden_field_tag "comment[post_id]", @post.id %>
                <%= hidden_field_tag "comment[user_id]", current_user.id %>
              </div>

              <div class="actions text-right">
                <%= f.submit "Comentar", class: "btn btn-primary" %>
              </div>
            <% end %>
          <% end %>

          <p><%= link_to "Inicio", posts_path, class: "enlace" %></p>

        </div>               
      </div> <!-- Fin div class post -->       
    
    </div>        
  </div>
</div>






