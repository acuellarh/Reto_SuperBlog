<div class="container">
  <div class="row justify-content-center">
    <div class="colum-sm-9">
        <h1><%=@post.title %></h1>
        <p><%= @post.content%></p> 

        <% if user_signed_in? && current_user.id == @post.user_id %>        
        <%= link_to "Volver", posts_path %>
        <br>
        <%= link_to "Editar", edit_post_path %>
        <br>
        <%= link_to 'Eliminar Post', @post, method: :delete, data: { confirm: 'Esta seguro de eliminar el Post ?' } %> 
        <%end%>

        <br><br>
        <h2>Comentarios</h2>
          <div>
            <%= render @post.comments %>
          </div>
          <div>
            <%= render 'comments/new', post: @post %>
          </div>
    </div>        
  </div>
</div>






